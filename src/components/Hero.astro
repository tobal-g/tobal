---
import { Image } from "astro:assets";
import pfp from "../assets/PFP.png";
---

<section class="hero">
  <div class="hero-content">
    <Image
      src={pfp}
      alt="Tobal"
      width={144}
      height={144}
      class="pfp"
      loading="eager"
    />
    <h1>Tobal</h1>
  </div>
</section>

<style>
  .hero {
    position: relative;
    padding-block: var(--space-16) var(--space-10);
    display: flex;
    justify-content: center;
  }

  .hero-content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-4);
  }

  .pfp {
    width: 144px;
    height: 144px;
    border-radius: 50%;
    object-fit: cover;
  }

  h1 {
    text-align: center;
  }
</style>
